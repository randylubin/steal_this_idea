.facebook-auth
	- if (!everyauth.loggedIn)
		#fb-login(style='float: left; margin-left: 5px')
			a(href='/auth/facebook', style='border: 0px')
				img(style='border: 0px', src='http://github.com/intridea/authbuttons/raw/master/png/facebook_64.png')

	-else
		- if (everyauth.facebook)
			h3 Facebook User Data
			p= JSON.stringify(everyauth.facebook.user)
#idea_new.row
	div.span3
		a.btn.btn-primary.btn-large(href="/idea/new") New Idea
.row
	h1 Latest Ideas
.row
	div#accordion1.accordion.span4
		-var i = 0;
		- each idea in ideas
			-i = i + 1
			div.accordion-group
				div.accordion-heading
					a.accordion-toggle(data-toggle="collapse", data-parent="#accordion1", href="#collapse" + i) #{idea.voters.length} votes | #{idea.title}
				div.accordion-body.collapse(id="collapse"+ i)
					div.accordion-inner
						p= idea.body
						a.pull-right(href="/idea/"+idea._id.toHexString()) link